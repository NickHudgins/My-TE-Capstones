@model IEnumerable<Capstone.Web.Models.Park>

@{
    ViewData["Title"] = "National Parks Geek";
}

<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                Park Name
            </th>
            <th>
                State
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Detail" asp-route-parkCode="@item.ParkCode">
                        <span class="parkImage"><img src="~/img/parks/@(item.ParkCode).jpg" /></span>
                    </a>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParkName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>

                <td id="DESCRIPTION">

                    @Html.DisplayFor(modelItem => item.ParkDescription)
                </td>
            </tr>
        }
    </tbody>
</table>
